
@{
    ViewBag.Title = "Lista categorii";
}

@if (TempData.ContainsKey("message"))
{
    <br />
    <div class="alert alert-success">
        <strong>Success!</strong> @ViewBag.message
    </div>
}

<h2>@ViewBag.Title</h2>
<br />
<a class="btn btn-primary" href="/Categories/New">Adauga categorie</a>
<br /><br />

@foreach (var category in ViewBag.Categories)
{
    @Html.Label("CategoryName", "Denumire categorie")
    <p>@category.CategoryName</p>
    <a class="btn btn-success" href="/Categories/Show/@category.CategoryId">Afisare categorie</a>
    <a class="btn btn-success" href="/Categories/Edit/@category.CategoryId">Editare categorie</a>
    <br />
    <hr />
    <br />
}


